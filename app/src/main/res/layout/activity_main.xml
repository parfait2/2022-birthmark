        <SeekBar
            android:id="@+id/seekBar_threshold1"
            android:layout_width="400dp"
            android:layout_height="match_parent"
            android:layout_weight="0.9" />

        <TextView
            android:id="@+id/textView_threshold1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.1" />

    </LinearLayout>

    <LinearLayout
